защита  max_sum_slice ( xs ):
  максимальная_сумма  =  0
  max_sum_so_far  =  0
  начальный_индекс  =  0
  конец_индекс  =  0
  для  i  в  диапазоне ( len ( xs )):
      max_sum_so_far  +=  xs [ я ]
      если  max_sum_so_far  >  max_sum :
          max_sum  =  max_sum_so_far
          начальный_индекс  =  я
          конец_индекс  =  я
      Элиф  max_sum_so_far  <  0 :
          max_sum_so_far  =  0
          начальный_индекс  =  я
      еще :
          конец_индекс  =  я
  возврат ( начальный_индекс , конечный_индекс ,
